        <TextBox Name="TxtPretraga" HorizontalAlignment="Left" Height="27" Margin="31,219,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="220" KeyUp="TxtPretraga_KeyUp" Background="#FF709AD6"/>
            <Button Background="#545d6a" Foreground="White" Content="Po adresi" Height="39" HorizontalAlignment="Left" Margin="351,0,0,84" Name="btnAdresa" VerticalAlignment="Bottom" Width="66" Click="btnAdresa_Click" />


    </Grid>
