        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SF_19_2019_POP2020"
        mc:Ignorable="d"
        Title="Login" Height="493.54" Width="665.797" FontSize="14" Background="#04c582" ResizeMode="NoResize">
